{
  "appId": "com.yourdoamnin.yourapp",
  "directories": {
    "buildResources": "resources"
  },
  "files": ["assets/**/*", "build/**/*", "capacitor.config.*", "app/**/*"],
  "publish": {
    "provider": "github"
  },
  "nsis": {
    "allowElevation": true,
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  },
  "win": {
    "target": "nsis",
    "icon": "assets/appIcon.ico"
  },
  "linux": {
    "target": "snap",
    "category": "AudioVideo",
    "icon": "assets/appIcon.png"
  },
  "snap": {
    "title": "UPlayer"
  }
}
